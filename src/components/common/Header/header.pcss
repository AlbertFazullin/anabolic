.header {
  display: block;
  line-height: 2;
  padding: 1rem 0 3rem 0;

  & > ul {
    padding: 0;
    margin: 0;
    list-style: none;

    & > li {
      display: inline-block;
      margin: 0 10px;

      & > a {
        font-weight: 400;
        text-decoration: none;

        &:hover {
          font-weight: 600;
        }

        &.active {
          font-weight: 600;
          border-bottom: 8px solid;
          color: #fff;
          cursor: default;
          pointer-events: none;
        }
      }
    }
  }
}
